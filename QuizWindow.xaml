<Window x:Class="ChatBot_Final.QuizWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="txtQuestion" FontSize="18" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <StackPanel x:Name="optionsPanel" Margin="0,0,0,10"/>

            <Button Content="Submit Answer" Click="SubmitAnswer_Click" HorizontalAlignment="Right" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtFeedback" FontWeight="Bold" Margin="0,10,0,0"/>

            <Button x:Name="btnNext" Content="Next Question" Click="NextQuestion_Click" HorizontalAlignment="Right" Visibility="Collapsed" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>