<Window x:Class="ChatBot_Final.MainWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatBot_Final"
        mc:Ignorable="d"
        Title="Cybersecurity Assistant"
        Height="600"
        Width="800"
        Background="#1E1E2F"
        FontFamily="Segoe UI"
        Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Chat Display Panel -->
        <Border Grid.Row="0" BorderBrush="#3A3A4F" BorderThickness="2" CornerRadius="8" Padding="10" Background="#2A2A3D">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Name="ChatScrollViewer">
                <StackPanel Name="ChatStack" />
            </ScrollViewer>
        </Border>

        <!-- Input & Buttons -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtUserInput"
                         Width="500"
                         Height="35"
                         Margin="0,0,10,0"
                         Background="#333344"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="8"
                         FontSize="14" />
                <Button Content="Send"
                        Width="100"
                        Height="35"
                        Click="Send_Click"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Cursor="Hand" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="Open Task Assistant"
                        Width="200"
                        Height="40"
                        Click="OpenTaskWindow_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderBrush="Transparent"
                        Margin="0,0,20,0" />
                <Button Content="Start Cybersecurity Quiz"
                        Width="200"
                        Height="40"
                        Click="OpenQuiz_Click"
                        Background="#FF5722"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderBrush="Transparent" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
